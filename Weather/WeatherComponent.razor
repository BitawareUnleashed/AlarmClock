@using DateTimeComponent.Models;
@using MudBlazor
@inject HttpClient Http
@inject IHttpClientFactory httpClientFactory
@inject SystemWatch SystemWatch
@inject IJSRuntime JsRuntime

@implements IAsyncDisposable

@if (@MeteoPack == null)
{
    <h1>--</h1>
}
else
{
    <MudCard Style="background-color:transparent">
        <MudCardMedia Image="@WeatherIcon" Height="@GetImageHeight()" />
        <MudCardContent Class="d-flex justify-center flex-grow-1 gap-4">
            <MudText Typo="Typo.h3" Style="font-weight:900">@GetTemperatureRounded() °C </MudText>
        </MudCardContent>
        <MudCardContent Class="d-flex justify-center flex-grow-1 gap-4">
            <MudText Typo="Typo.body2">@MeteoPack.name</MudText>
        </MudCardContent>
        @*        <MudCardActions>
    <MudButton Variant="Variant.Text" Color="Color.Primary">Share</MudButton>
    <MudButton Variant="Variant.Text" Color="Color.Primary">Learn More</MudButton>
    </MudCardActions>*@
    </MudCard>
}
